{
  "compilerOptions": {
    /* Basic Options */
    "target": "es5",
    "module": "esnext",
    "moduleResolution": "node",
    "lib": [
      "esnext",
      "dom"
    ],
    "sourceMap": true,
    "allowJs": true,
    "jsx": "react",
    "noImplicitReturns": true,
    
    "esModuleInterop": true,
    "strict": true,
    "experimentalDecorators": true,

    // fork-ts-checker-webpack-pluginç”¨
    "skipLibCheck": true,
    "typeRoots": ["src/types", "node_modules/@types"]
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "docs"
  ]
}